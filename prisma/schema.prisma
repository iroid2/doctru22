model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  firstName     String
  lastName          String
  phone          String
  email         String   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(INDIVIDUAL)
  password      String?
  documents     Document[]     
  status Boolean @default(true)
  accounts      Account[]
  sessions      Session[]
  isVerfied     Boolean   @default(false)
  token         Int?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Document model representing the document flow through various roles
model Document {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String
  documentLink   String        // Store multiple document links (files)
  status         DocumentStatus  @default(PENDING)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String          @db.ObjectId

  currentStep    Step            @default(NORMAL_USER) // Tracks the current stage in the flow
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}


 
 
 